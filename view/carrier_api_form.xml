<form string="Carrier API">
    <label name="method"/>
    <field name="method"/>
    <notebook>
        <page string="Carriers" id="carriers">
            <field name="carriers"/>
        </page>
        <page string="API" id="api">
            <label name="url"/>
            <field name="url"/>
            <label name="username"/>
            <field name="username"/>
            <label name="password"/>
            <field name="password" widget="password"/>
            <label name="debug"/>
            <field name="debug"/>
            <separator string="Test" colspan="6" id="test"/>
            <button name="test_connection" string="Test connection" colspan="6"/>
        </page>
        <page string="General" id="general">
            <label name="reference"/>
            <field name="reference"/>
            <label name="reference_origin"/>
            <field name="reference_origin"/>
            <label name="vat"/>
            <field name="vat"/>
            <label name="phone"/>
            <field name="phone"/>
            <label name="company"/>
            <field name="company"/>
            <label name="weight"/>
            <field name="weight"/>
        </page>
        <page string="Services" id="services">
            <label name="default_service"/>
            <field name="default_service"/>
            <field name="services" colspan="6"/>
        </page>
        <page string="Zip" id="zips">
            <field name="zips"/>
        </page>
    </notebook>
</form>
